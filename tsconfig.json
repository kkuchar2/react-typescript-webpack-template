{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "images": [ "../assets/images" ],
      "util/*": [ "util/*" ],
      "app_redux/*": [ "redux/*" ],
      "components/*": [ "components/*" ]
    },
    "rootDir": "src",
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
